<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CO2Bakalauras.Views.FirstPage"
             xmlns:vm="clr-namespace:CO2Bakalauras.ViewModels">
    <ContentPage.BindingContext>
        <vm:FirstViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">

            <Button Text="Prisijungti su Google" Margin="0,5" Command="{Binding LoginWithGoogle}"/>
            
            <Button Text="Prisijungti su paskyra" Margin="0,5" Command="{Binding Login}"/>

            <Button Text="Neturi paskyros?" Background="White" Command="{Binding Register}" TextColor="{StaticResource Primary}" FontSize="14" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>